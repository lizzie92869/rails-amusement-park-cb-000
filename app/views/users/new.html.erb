<!-- copy of registration/new from device default views -->
<h2>Sign up</h2>

<%= form_for(@user)  do |f| %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :height %><br />
    <%= f.text_field :height %>
  </div>

  <div class="field">
    <%= f.label :happiness %><br />
    <%= f.text_field :happiness %>
  </div>

  <div class="field">
    <%= f.label :nausea %><br />
    <%= f.text_field :nausea %>
  </div>

	<div class="field">
    <%= f.label :tickets %><br />
    <%= f.text_field :tickets %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>

  <div class="field">
      <%= f.label :admin, "Check box if you are a theme park owner" %>
      <%= f.check_box :admin%>
  </div>

  <div class="actions">
    <%= f.submit "Create User" %>
  </div>
<% end %>

